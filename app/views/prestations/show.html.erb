      <div>
        <ul class="container-fluid mt-5">
          <% @prestation.tasks.each do |task| %>
            <li class="card-task white-hover row align-items-center justify-content-between py-2 px-2">
              <% if task.kind == 'admin' %>
                <% if task.urgent == true %>
                  <div class="urgent col-1 px-0"><i class="fas fa-thumbtack"></i></div>
                <% else %>
                  <div class="p-gray col-1 px-0"><i class="fas fa-thumbtack"></i></div>
                <% end %>
              <% else %>
                <% if task.urgent == true %>
                  <div class="urgent col-1 px-0"><i class="fas fa-palette"></i></i></div>
                <% else %>
                  <div class="p-gray col-1 px-0"><i class="fas fa-palette"></i></i></div>
                <% end %>
              <% end %>
              <% if task.end_date < Date.today %>
                <p class="text-truncate col-7 p-gray"><%= task.name %></p>
                <p class="task-prestation-client text-right p-gray pr-5"><%= l(task.start_date, format: '%d %b') %></p>
              <% elsif task.kind =='évènement' %>
                <p class="text-truncate col-7 green font-weight-bold"><%= task.name %></p>
                <p class="task-prestation-client text-right p-gray pr-5 green font-weight-bold"><%= l(task.start_date, format: '%d %b') %></p>
              <% else %>
                <p class="text-truncate col-7"><%= task.name %></p>
                <p class="task-prestation-client text-right p-gray pr-5"><%= l(task.start_date, format: '%d %b') %></p>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>

  </div>
