<div class="d-flex w-100">
  <div class="show-presta-client">

      <h1 class="mt-5 ml-5"> <%= @prestation.category %><span class="green-point">.</span></h1>

    <div class="show-prestation-place-date d-flex align-items-center justify-content-between">
      <div class="div1">
        <% if @prestation.start_date != @prestation.end_date %>
            <p class="event-date-show-prestation show-presta-color font-weight-bold ml-5 mb-2"><i class="far fa-calendar-alt icon"></i> <%= l(@prestation.start_date, format: '%d') %> - <%= l(@prestation.end_date, format: '%d %B') %></p>
        <% else %>
            <p class="event-date-show-prestation show-presta-color font-weight-bold ml-5 mb-2"><i class="far fa-calendar-alt icon"></i> <%= l(@prestation.start_date, format: '%d %B') %></p>
        <% end %>
        <p><i class="fas fa-map-marker-alt ml-5 mb-5 icon-gray"></i> <%= @prestation.location %></p>
      </div>
      <div class="div2">
        <p class="pho-btn px-2 mr-5">Modifier</p>
      </div>
    </div>
    <div class="px-5">
      <p class="border-bottom-light-gray mb-5"></p>
    </div>

    <div>
      <h2 class="mx-5 mb-4"><%= @prestation.client.first_name %> <%= @prestation.client.last_name %></h2>
      <div class="d-flex ml-5 align-items-center">
        <div>
          <%= cl_image_tag @prestation.client.photo.key, crop: :fill, width: 250, height: 250, class: "photo-client" %>
        </div>
        <div class="ml-5">
          <p class="pb-3 p-gray"><i class="fas fa-envelope icon-gray"></i>  <%= @prestation.client.email %></p>
          <p class="pb-3 p-gray"> <i class="fas fa-phone icon-gray"></i>  <%= @prestation.client.phone_number %> </p>
          <p class="pb-3 p-gray"> <i class="fas fa-home icon-gray"></i>  <%= @prestation.client.address  %> </p>
          <% if @prestation.client.partner_name.nil? == false %>
            <p class="pb-3 p-gray"> <i class="fas fa-plus-circle icon-gray"></i>  <%= @prestation.client.partner_name %> </p>
          <% end %>
          <%if @prestation.client.tutoiement == true %>
            <p class="pb-3 p-gray"><i class="fas fa-comment icon-gray"></i>  On se tutoie </i></p>
          <% else %>
            <p class="pb-3 p-gray"><i class="fas fa-comment icon-gray"></i>  On se vouvoie </i></p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="px-5">
      <p class="border-bottom-light-gray mt-5"></p>
    </div>

    <div class="mx-5 mb-5 mt-5">
      <h2>Notes</h2>
         <p class="mt-2 pb-5"><%= @prestation.notes %></p>
    </div>

  </div>


