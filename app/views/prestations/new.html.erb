<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <div class="form-post mb-5">
        <h1 class="mt-3 mb-5">Nouvelle prestation<span class="green-point">.</span></h1>
        <%= simple_form_for @prestation do |f| %>
          <div class="row">
            <div class="col">
              <%= f.input :start_date,
                          as: :string,
                          required: false,
                          input_html: {id: "datepicker"},
                          label: 'Date de début' %>
            </div>
            <div class="col">
              <%= f.input :end_date,
                          as: :string,
                          required: false,
                          input_html: {class: "end_date"},
                          label: 'Date de fin' %>
            </div>
          </div>
          <%= f.input :category,
                      as: :select,
                      collection: Prestation::CATEGORIES,
                      class: 'select2',
                      label: 'Catégorie',
                      placeholder: 'Sélectionner le type de la prestation' %>

          <%= f.input :location,
                      as: :string,
                      label: 'Lieu',
                      placeholder: "Indiquer l'adresse de la prestation" %>

          <%= f.association :client,
                      label_method: :last_name,
                      value_method: :id,
                      class: 'select2',
                      label: 'Client',
                      collection: Client.order(:last_name) %>


          <%= f.input :notes,
                      as: :text,
                      label: 'Notes',
                      placeholder: "Ajouter des informations sur la prestation" %>

          <div class="d-flex flex-row-reverse mt-4">
            <%= f.submit "Créer", class: 'pho-btn' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
