<div class="signin-container d-flex">
  <div>
    <%= image_tag "home-3.jpg", class: "signin-image" %>
  </div>
  <div class="signin text-center">
    <div class="form-signin">
      <div class="signin-titles">
        <h1 class="mb-3">Photograph<span class="green-point">R.</span></h1>
        <h4 class="tagline mb-5">Lib√©rez votre temps,<br/>photographiez plus</h4>
        <p class="mb-4">Connectez-vous :</p>
      </div>
      <div class="form">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: false,
                        placeholder: 'Votre Email',
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label: false,
                        placeholder: 'Votre mot de passe',
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions pho-btn">
            <%= f.button :submit, "Se connecter" %>
          </div>
        <% end %>
        <div class="devise-links mt-5">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>

