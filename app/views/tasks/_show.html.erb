<div class="container">
  <div class="task-show row">
    <div class="col px-5">
      <!-- Close button -->
      <div class="row">
        <div class="col px-0">
          <button type="button" class="close mt-5" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
      <!-- TASK SHOW -->
      <div id="info-task-<%= task.id %>">
        <%= render 'infotask', task: task %>
      </div>
    </div>
  </div>
  <div class="task-form row d-none">
    <div class="col px-5">
      <!-- TASK EDIT FORM -->
      <%= render 'editform', task: task %>
    </div>
  </div>
</div>
