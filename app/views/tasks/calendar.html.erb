<div class="principale-calendar-task col-md-5">
  <h1 class="calendar-title"> <%= l(@today, format: '%B %Y') %> <span class="green-point">.</span></h1>
  <div class="calendar">

    <% @all_days.in_groups_of(7) do |week| %>
      <div class="calendar-week-view d-flex">
        <% week.each do |day| %>
          <div class="calendar-day-view d-flex">
            <% if @days_current_month.find {|d| day == d } %>
              <% if @tasks_by_day.keys.find {|td| day == td } %>
                <p class="day-task"><%= l(day, format: '%d') %></p>
                <% else %>
                <p class="day"><%= l(day, format: '%d') %></p>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="display-task ml-5 col-md-6">
<h1 class="task-title-calendar pb-2 mt-4">TÃ¢ches<span class="green-point">.</span></h1>
<% @tasks_by_day.each do |day, tasks| %>
<h4 class="pickup-day pb-5"><%= l(day, format: '%d %B') %></h4>
<% tasks.each do |task| %>
<div class="d-flex">
  <% if task.kind == 'admin' %>
    <% if task.urgent == true %>
      <div class="urgent px-0"><i class="fas fa-thumbtack picto-task-calendar"></i></div>
    <% else %>
      <div class="p-gray px-0"><i class="fas fa-thumbtack picto-task-calendar"></i></div>
    <% end %>
   <% else %>
     <% if task.urgent == true %>
      <div class="urgent px-0"><i class="fas fa-palette picto-task-calendar"></i></i></div>
     <% else %>
      <div class="p-gray px-0"><i class="fas fa-palette picto-task-calendar"></i></i></div>
     <% end %>
  <% end %>
  <h3 class="col-9 px-0 title-task"><%= task.name %></h3>
  <p class="p-gray col-2 px-0 task-prestation-title-calendar"><%= task.prestation.title %></p></div>
  <p class="text-center pb-3"><%= task.description %></p>
<% end %>
<% end %>
</div>
