<% if task.kind == 'admin' %>
  <% if task.urgent == true %>
    <div class="urgent col-1 px-0"><i class="fas fa-thumbtack"></i></div>
  <% else %>
    <div class="p-gray col-1 px-0"><i class="fas fa-thumbtack"></i></div>
  <% end %>
<% else %>
  <% if task.urgent == true %>
    <div class="urgent col-1 px-0"><i class="fas fa-palette"></i></i></div>
  <% else %>
    <div class="p-gray col-1 px-0"><i class="fas fa-palette"></i></i></div>
  <% end %>
<% end %>

<!-- Rajouter le lien vers la show de la TÃ¢che -->
<div class="col-7">
  <p class="task-name"><%= task.name %></p>
</div>

<%= link_to prestation_path(task.prestation), class: "card-task-link col-4 px-0" do %>
  <p class="task-prestation-client text-right p-gray"><%= task.prestation.category.upcase %> - <%=  task.prestation.client.last_name %></p>
<% end %>


