
<%= link_to mark_as_urgent_task_path(task), class: "link-mark-as-urgent", method: :patch, remote: true do %>
  <% if task.kind == "admin" %>
    <% if task.urgent == true %>
      <div id="tag-urgent-<%= task.id %>" class="tag-urgent urgent col-1 pl-0 pr-1"><i class="fas fa-thumbtack"></i></div>
    <% else %>
      <div id="tag-urgent-<%= task.id %>" class="tag-urgent p-gray col-1 pl-0 pr-1"><i class="fas fa-thumbtack"></i></div>
    <% end %>
  <% else %>
    <% if task.urgent == true %>
      <div id="tag-urgent-<%= task.id %>" class="tag-urgent urgent col-1 pl-0 pr-1"><i class="fas fa-palette"></i></i></div>
    <% else %>
      <div id="tag-urgent-<%= task.id %>" class="tag-urgent p-gray col-1 pl-0 pr-1"><i class="fas fa-palette"></i></i></div>
    <% end %>
  <% end %>
<% end %>

<%= link_to mark_as_done_task_path(task), class: "link-mark-as-done", method: :patch, remote: true do %>
  <% if task.done %>
    <div id="tag-done-<%= task.id %>" class="tag-done green col-1 px-0"><i class="fas fa-check"></i></div>
  <% else %>
    <div id="tag-done-<%= task.id %>" class="tag-done p-gray col-1 px-0"><i class="fas fa-check"></i></div>
  <% end %>
<% end %>
<!-- Rajouter le lien vers la show de la TÃ¢che -->
<div class="col-6">
  <p class="task-name"><%= task.name %></p>
</div>

<%= link_to prestation_path(task.prestation), class: "card-task-link col-4 px-0" do %>
  <p class="task-prestation-client text-right p-gray"><%= task.prestation.category.upcase %> - <%=  task.prestation.client.last_name %></p>
<% end %>


