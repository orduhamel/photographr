    const cardsTask = document.querySelectorAll(".card-task");

    cardsTask.forEach((cardTask) => {
      const validateForm = cardTask.querySelector(".validate");
      console.log(validateForm);
      const taskEditForm = cardTask.querySelector(".task-form");
      console.log(taskEditForm);
      // Au click sur le bouton 'Valider'
      // Masquer le formulaire
      // Rafraichir les infos Display les infos
      validateForm.addEventListener("click", (event) => {
