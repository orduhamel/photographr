<div class="principale-index-client bg-white w-100">
<h1 class="mt-5 ml-5">Liste des clients<span class="green-point">.</span></h1>

  <div class="container-index-client d-flex row m-3">
    <% @clients.each do |client| %>
    <div class="card-client col m-4 px-0">
        <%= link_to client_path(client), class: "link-text-index" do  %>
          <%= cl_image_tag client.photo.key, crop: :fill, width: 400, height: 220, class: "photo-client-index"%>
        <div class="info-card-client">
          <p class="index-title-client mt-2 text-center"><%= client.first_name %> <%= client.last_name %></p>
          <div class="phone-client mt-2 d-flex px-3 pb-3">
            <i class="fas fa-phone lm-gray mr-2 mt-1"></i>
            <p class="m-gray"><%= client.phone_number %></p>
          </div>
          <div class="e-mail-client d-flex px-3 pb-3">
            <i class="fas fa-envelope lm-gray mr-2 mt-1"></i>
            <p class="m-gray"><%= client.email %></p>
          </div>
          <div class="count-status-client row d-flex">
            <% if client.prestations.count == 1 %>
              <div class="prestation-client-index d-flex col p-3">
                <p class= "green col-md-9"><i class="fas fa-camera green col-md-1 px-4"></i><%= client.prestations.count %> prestation</p>
                <% client.prestations.each do |prestation|%>
                  <% if prestation.status == "progress" %>
                    <p class="light-pink col-md-2 text-right"><i class="point-rose fas fa-circle"></i></p>
                  <% end %>
                <% end %>
              </div>
            <% else %>
              <div class="prestation-client-index d-flex col p-3">
               <p class="green col-md-9">
                <i class="fas fa-camera green px-4 col-md-1"></i>
                <%= client.prestations.count %> prestations</p>
                <% client.prestations.each do |prestation|%>
                  <% if prestation.status == "progress" %>
                    <p class="light-pink col-md-2 text-right"><i class="point-rose fas fa-circle"></i></p>
                  <% end %>
                <% end %>
              </div>
            <% end %>

          </div>
        </div>
        <% end %>
      </div>
    <% end %>
</div>

